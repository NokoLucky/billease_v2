default_platform(:ios)

platform :ios do
  desc "Deploy to TestFlight"
  lane :deploy do
    # Build with API key authentication
    build_app(
      workspace: "App.xcworkspace",
      scheme: "App",
      export_method: "app-store",
      clean: true,
      xcargs: "-allowProvisioningUpdates -authenticationKeyIssuerID #{ENV['APP_STORE_CONNECT_ISSUER_ID']} -authenticationKeyID #{ENV['APP_STORE_CONNECT_KEY_ID']}"
    )
    
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end
end